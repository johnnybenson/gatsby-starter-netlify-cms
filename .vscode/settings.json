{
  "javascript.validate.enable": false,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "ruby.lint": {
    "rubocop": true
  },
  // Set the default
  "editor.formatOnSave": false,
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
}
